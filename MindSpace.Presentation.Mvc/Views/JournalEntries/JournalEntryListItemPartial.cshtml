@model MindSpace.Presentation.Mvc.Models.JournalEntry.UserJournalEntryViewModel


<div class="card mb-3 shadow-sm">
    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start">
        <!-- Left side: Title and Description -->
        <div class="flex-grow-1 me-md-3 mb-3 mb-md-0">
            <h5 class="card-title mb-1">@Model.Title</h5>
            <p class="card-text text-muted mb-3">@Model.Content</p>
            <!-- Tags -->
            @if (Model.Tags != null && Model.Tags.Any())
            {
                <div class="mb-2 w-100">
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="badge bg-primary me-1 mb-1">@tag</span>
                    }
                </div>
            }
        </div>

        <!-- Right side: Mood, Date, Buttons -->
        <div class="text-md-end d-flex flex-column align-items-start align-items-md-end">

            <!-- Mood and Date row -->
            <div class="d-flex justify-content-start justify-content-md-end gap-3 mb-3 w-100">
                <div>
                    <small class="text-muted d-block">Mood</small>
                    <span class="fw-semibold text-primary">@Model.Mood</span>
                </div>
                <div>
                    <small class="text-muted d-block">Date</small>
                    <span class="fw-semibold">@Model.Date</span>
                </div>
            </div>



            <!-- Buttons -->
            <div class="w-100 d-flex justify-content-start justify-content-md-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary" type="button">Edit</a>

                <button type="button" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@Model.Id" data-title="@Model.Title" class="btn btn-delete btn-sm btn-outline-danger">Delete</button>

            </div>
        </div>
    </div>
</div>



